<style>
    #idea_view_part{
        margin-top:100px;
    }
    .idea_card{
        border:2px solid gray;
        border-radius:20px;
        width:30%;
        float:left;
        height:230px;
        margin:1.25%;
    }
    .idea_card_ideaname{
        height:80px;
        font-size:2rem;
    }
    .idea_card_article{
        height:150px;
        overflow:scroll;
    }
    
    h2{
        margin-bottom:50px;
    }
    .footer{
        display: none;
    }
    
</style>

<div id="idea_view_part">
    <h1>2017_1 vision program idea</h1>
    <h2>총 {{data.length}}개의 아이디어</h2>
    
    {{#each data}}
        <div class="idea_card">
            <div class="idea_card_ideaname">{{ideaName}}</div>
            <hr>
            <div class="idea_card_article">{{ideaArticle}}</div>
        </div>
    {{/each}}
    
</div>